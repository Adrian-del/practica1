 public static void main(String[] args) {
        int Arreglo[] = new int[50]; int c=0;
        for (int i = 0; i <Arreglo.length; i++) {//c++;
            Arreglo[i] = (int)(Math.random()*99+1);//Arreglo[i]=c;
            if(Arreglo[i]%2==0){c++;
                System.out.println(Arreglo[i]);
            }
        
            
        }System.out.println("los pares que hay son: " + c);
        
    }
